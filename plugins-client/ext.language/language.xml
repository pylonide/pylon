<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:skin id="language_skin"
      src       = "{require('ext/language/language').skin}"/>

    <a:bar id="barOutline" skinset="language_skin" skin="outline" width="300" visible="false">
        <a:vbox anchors="0 0 0 0">
            <a:toolbar>
                <a:bar height = "36">
                    <a:hbox edge="5">
                        <a:textbox 
                          id              = "tbOutlineSearch"
                          realtime        = "true"
                          flex            = "1"
                          skin            = "searchbox_textbox"
                          class           = "small_font"
                          focusselect     = "true"
                          initial-message = "Search Outline"
                        />
                    </a:hbox>
                </a:bar>
            </a:toolbar>
            <a:hbox flex="1">
                <a:model id="mdlOutline">
                    <data>
                    </data>
                </a:model>
                <a:tree
                  id              = "treeOutline"
                  skin            = "outline-tree"
                  opencloseaction = "onmouseup"
                  onafterchoose   = "require('ext/language/outline').jumpToAndClose(this.selected)"
                  onafterselect   = "require('ext/language/outline').jumpTo(this.selected)"
                  onkeyup         = "require('ext/language/outline').escapeOutline(event)"
                  model           = "mdlOutline"
                  openadd         = "false"
                  startcollapsed  = "false"
                  empty-message   = "No outline avaialble"
                  flex            = "1"
                  anchors = "0 0 0 0">
                    <a:each
                      match         = "[entries|entry]"
                      filter        = "{tbOutlineSearch.value}"
                      filter-groups = "entries"
                      filter-fields = "@name"
                    >
                        <a:caption>
                          <?lm [@name]{!![@meta] ? "<cpde style='color:gray;'> : [@meta]</code>" : ""} ?>
                        </a:caption>
                        <a:icon value="/static/ext/language/img/[@icon].png" />
                    </a:each>
                </a:tree>
                <a:scrollbar
                  for      = "treeOutline"
                  id       = "sbOutline"
                  margin   = "2"
                  skin     = "sbios"
                  width    = "7"
                  overflow2 = "auto"/>
              </a:hbox>
        </a:vbox>
    </a:bar>


    <a:bar id="barHierarchy" skinset="language_skin" skin="outline" width="300" visible="false">
        <a:vbox anchors="0 0 0 0">
            <a:toolbar>
                <a:bar height = "36">
                    <a:hbox edge="5">
                        <a:button
                          icon     = "hier_supertype.png"
                          tooltip  = "Supertypes Hierarchy"
                          onclick  = "require('ext/language/hierarchy').refreshHierarchy(0)" />
                        <a:button
                          icon     = "hier_subtype.png"
                          tooltip = "Subtypes Hierarchy"
                          onclick  = "require('ext/language/hierarchy').refreshHierarchy(1)" />
                        <a:textbox 
                          id              = "tbHierarchySearch"
                          realtime        = "true"
                          flex            = "1"
                          skin            = "searchbox_textbox"
                          class           = "small_font"
                          focusselect     = "true"
                          initial-message = "Search Hierarchy"
                        />
                    </a:hbox>
                </a:bar>
            </a:toolbar>
            <a:hbox flex="1">
                <a:model id="mdlHierarchy">
                    <data>
                    </data>
                </a:model>
                <a:tree
                  id              = "treeHierarchy"
                  skin            = "outline-tree"
                  opencloseaction = "onmouseup"
                  onafterchoose   = "require('ext/language/hierarchy').jumpToAndClose(this.selected)"
                  onkeyup         = "require('ext/language/hierarchy').escapeHierarchy(event)"
                  model           = "mdlHierarchy"
                  openadd         = "false"
                  startcollapsed  = "false"
                  empty-message   = "No Hierarchy avaialble"
                  flex            = "1"
                  anchors = "0 0 0 0">
                    <a:each
                      match         = "[entry]"
                      filter        = "{tbHierarchySearch.value}"
                      filter-fields = "@name"
                    >
                        <a:caption>
                          <?lm [@name]{!![@meta] ? "<code style='color:gray;'> - [@meta]</code>" : ""} ?>
                        </a:caption>
                        <a:icon value="/static/ext/language/img/[@icon].png" />
                    </a:each>
                </a:tree>
                <a:scrollbar
                  for      = "treeHierarchy"
                  id       = "sbHierarchy"
                  margin   = "2"
                  skin     = "sbios"
                  width    = "7"
                  overflow2 = "auto"/>
              </a:hbox>
        </a:vbox>
    </a:bar>
    
    <a:bar id="barCompleterCont" skinset="language_skin" skin="codecomplete" width="350" visible="false">
        <a:hbox anchors="0 0 0 0">
            <a:text id="txtCompleter" skin="codecomplete_text" flex="1" />
            <a:scrollbar
              for      = "txtCompleter"
              id       = "sbCompleter"
              margin   = "2"
              skin     = "sbios"
              width    = "7"
              overflow2 = "auto"/>
          </a:hbox>
    </a:bar>
    
</a:application>
