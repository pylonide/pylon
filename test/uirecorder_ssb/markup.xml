<a:table columns="300, 200" cellheight="150" padding="10">
    <a:datagrid>
        <a:each match="[watch]">
            <a:column 
              caption = "Company" 
              value   = "[@company]" 
              width   = "50%">
            </a:column>
            <a:column 
              caption = "Type" 
              value   = "[@type]" 
              width   = "50%">
            </a:column>

            <a:drag match="[watch]" />
            <a:drop 
              match  = "[watch]" 
              target = "[watch]" 
              action = "insert-before" />
