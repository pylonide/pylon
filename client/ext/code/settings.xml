<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:frame caption="Code Editor" anchors="0 0 0 0">
        <a:table columns="150,150">
            <a:checkbox label="Wrap Lines" value="[@wrap]" />
            <a:checkbox label="Overwrite mode" value="[@overwrite]" checked="false" />
            <a:checkbox label="Full line selection" value="[@selectstyle]" values="line|text" checked="true"/>
            <a:checkbox label="Highlight active line" value="[@activeline]" checked="true"/>
            <a:checkbox label="Show invisibles" value="[@showinvisibles]" checked="true"/>
        </a:table>
        <a:hbox edge="10 0 0 0">
            <a:checkbox label="Show print margin" value="[@showprintmargin]" checked="true" width="115" />
            <a:spinner value="[@printmargincolumn]" realtime="true" min="1" max="200" width="50" />
        </a:hbox>
        <a:hbox edge="10 0 0 0">
            <a:checkbox label="Soft tabs" value="[@softtabs]" checked="true" width="115" />
            <a:spinner value="[@tabsize]" realtime="true" min="1" max="64" width="50" />
        </a:hbox>
    </a:frame>
</a:application>